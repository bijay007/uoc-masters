{
  "extends": "stylelint-config-recommended-scss",
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "selector-class-pattern": "^.[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
    "order/properties-order": [
      "width",
			"height"
    ],
    "color-hex-case": "upper",
    "indentation": 2,
    "scss/selector-no-redundant-nesting-selector": true
  }
}